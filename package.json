{
  "name": "@progcat/haunted",
  "version": "1.0.2",
  "description": "GitHub AI DevOps tool - AI agents that haunt your repository",
  "author": "Pr0gCat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pr0gCat/haunted.git"
  },
  "keywords": [
    "github",
    "ai",
    "devops",
    "automation",
    "claude",
    "agent"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "haunted": "./dist/index.js",
    "haunted-manager": "./dist/manager.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "manager": "bun run src/manager/index.ts",
    "manager:dev": "bun run --watch src/manager/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun && bun build src/manager/index.ts --outfile dist/manager.js --target bun && node -e \"const fs=require('fs'); ['dist/index.js','dist/manager.js'].forEach(f=>{const c=fs.readFileSync(f,'utf8');fs.writeFileSync(f,'#!/usr/bin/env bun\\n'+c)})\"",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "hono": "^4.11.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.2"
  }
}
